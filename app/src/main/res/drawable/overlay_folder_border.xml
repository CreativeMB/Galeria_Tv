<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Borde exterior grueso -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="8dp"
                android:color="#D9A441"/> <!-- tono ocre cálido -->
        </shape>
    </item>

    <!-- Borde medio -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="6dp"
                android:color="#F0C27B"/> <!-- tono más claro -->
        </shape>
    </item>

    <!-- Borde interior -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="4dp"
                android:color="#FFD599"/> <!-- tono muy claro -->
        </shape>
    </item>

    <!-- Icono de carpeta en la esquina superior derecha -->
    <item
        android:gravity="top|end">
        <bitmap
            android:src="@drawable/icono"
            android:gravity="top|end"
            android:tileMode="disabled"/>
    </item>

</layer-list>
