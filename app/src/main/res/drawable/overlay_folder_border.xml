<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Borde exterior grueso -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="8dp"
                android:color="#D9A441"/> <!-- tono ocre cálido -->
        </shape>
    </item>

    <!-- Borde medio -->
    <item android:top="4dp" android:bottom="4dp" android:left="4dp" android:right="4dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="6dp"
                android:color="#F0C27B"/> <!-- tono más claro -->
        </shape>
    </item>

    <!-- Borde interior -->
    <item android:top="8dp" android:bottom="8dp" android:left="8dp" android:right="8dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="4dp"
                android:color="#FFD599"/> <!-- tono muy claro -->
        </shape>
    </item>

    <!-- Icono de carpeta en la esquina superior derecha -->
    <item
        android:gravity="top|end"
        android:top="10dp"
        android:right="8dp"
        android:width="50dp"
        android:height="50dp">
        <bitmap
            android:src="@drawable/icono"
            android:tileMode="disabled"/>
    </item>

</layer-list>
