<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <!-- Barra superior con 5 iconos -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:background="#FF222222"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:gravity="end|center_vertical"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:descendantFocusability="afterDescendants">

        <!-- Botón seleccionar carpeta -->
        <Button
            android:id="@+id/selectFolderButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar Carpeta Predeterminada"
            android:textColor="@android:color/white"
            android:background="@drawable/item_background_selector"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp" />

        <!-- Icono Configuración -->
        <ImageView
            android:id="@+id/imgConfig"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginVertical="4dp"
            android:padding="8dp"
            android:src="@drawable/outline_animated_images_24"
            android:contentDescription="Configuración"
            android:background="@drawable/item_background_selector" />

        <!-- Icono Filas / Perfil -->
        <ImageView
            android:id="@+id/imgFilas"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginVertical="4dp"
            android:padding="8dp"
            android:src="@drawable/outline_ad_group_24"
            android:contentDescription="Perfil"
            android:background="@drawable/item_background_selector" />

        <!-- Icono Buscar -->
        <ImageView
            android:id="@+id/imgBuscar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginVertical="4dp"
            android:padding="8dp"
            android:src="@drawable/icono"
            android:contentDescription="Buscar"
            android:background="@drawable/item_background_selector" />

        <!-- Icono Menú -->
        <ImageView
            android:id="@+id/imgMenu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginVertical="4dp"
            android:padding="8dp"
            android:src="@drawable/baseline_menu_24"
            android:contentDescription="Menú"
            android:background="@drawable/item_background_selector" />

    </LinearLayout>

    <!-- Contenedor principal -->
    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="2dp"
        android:clipChildren="false"
        android:clipToPadding="false">

        <!-- RecyclerView principal -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:background="@color/blanco"
            android:padding="8dp"
            android:layout_margin="8dp" />

    </LinearLayout>

</LinearLayout>
