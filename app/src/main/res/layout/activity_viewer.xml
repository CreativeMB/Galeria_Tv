<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- ðŸ”¹ Fondo difuminado -->
    <ImageView
        android:id="@+id/blurBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="Fondo difuminado" />

    <!-- ðŸ”¹ Contenedor principal de fotos o videos -->
    <FrameLayout
        android:id="@+id/photoViewContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false" />

    <!-- ðŸ”¹ Barra inferior -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:background="#59000000"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/btnPlayPause"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/item_background_selector"
            android:src="@drawable/baseline_play_circle_24"
            android:contentDescription="Play/Pause" />

        <TextView
            android:id="@+id/txtFileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Archivo.mp4"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- ðŸ”¹ Icono central de play -->
    <ImageView
        android:id="@+id/videoCenterIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/baseline_play_circle_24"
        android:visibility="gone" />

</FrameLayout>
